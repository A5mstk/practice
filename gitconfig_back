# 各種出力をカラーで行う
[color]
	ui = true
[alias]
	st = status
	co = checkout
	cm = commit
        ft = fetch -p
        g = grep -n
        logo = log --oneline 
        logg = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
        logf = log --name-status --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
